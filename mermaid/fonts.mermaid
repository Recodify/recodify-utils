%% ─────────────────────────────────────────────
%% Class definitions (fonts)
%% ─────────────────────────────────────────────
classDef fontSans  font-family:Inter,system-ui,Segoe UI,Roboto,Arial,sans-serif;
classDef fontSerif font-family:Georgia,Times New Roman,Times,serif;
classDef fontMono  font-family:ui-monospace,SFMono-Regular,Menlo,Monaco,Consolas,Courier New,monospace;

classDef fontBig       font-size:20px;
classDef fontSmall     font-size:11px;

classDef fontBold      font-weight:700;
classDef fontItalic    font-style:italic;
classDef fontCaps      text-transform:uppercase,letter-spacing:0.06em;
classDef fontUnderline text-decoration:underline;

%% Mermaid/CSS support for letter-spacing/line-height varies by renderer;
%% these often work in Mermaid Live + many Markdown renderers, but not all.
classDef fontTight     letter-spacing:-0.02em,line-height:1.0;
classDef fontLoose     letter-spacing:0.08em,line-height:1.35;

%% Subgraph title font classes (same idea)
classDef sgSans  font-family:Inter,system-ui,Segoe UI,Roboto,Arial,sans-serif;
classDef sgSerif font-family:Georgia,Times,serif;
classDef sgMono  font-family:ui-monospace,SFMono-Regular,Menlo,Monaco,Consolas,monospace;
classDef sgBig   font-size:20px;
classDef sgBold  font-weight:800;
